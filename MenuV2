-- Path-based categorization
local pathKeywords = {
    give = {
        "Giver", "Rewards", "Items", "Inventory", "Collect", "Loot", "Drop", "Spawn",
        "Equipment", "Gear", "Tools", "Weapons", "Supplies", "Resources", "Assets"
